In [14]: def priceChange(p): 
    ...:     nrows = p.shape[0] 
    ...:     pc = np.zeros(nrows) 
    ...:     for i in range(1,nrows): 
    ...:         pc[i] = (p[i]-p[i-1])/p[i-1] 
    ...:     return pc 
    ...:                                                                                                                                                                                                                                                                                                                                                                  

